@model ItemShop.Models.CreateItemViewModel
@{
    ViewData["Title"] = "Create item";
}

<body>

    <h4>Item</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="CreateNewItem">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Bonus" class="control-label"></label>
                    <input asp-for="Bonus" class="form-control" />
                    <span asp-validation-for="Bonus" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Type" class="control-label"></label>
                    <input asp-for="Type" class="form-control" />
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input class="btn btn-danger" role="button" aria-pressed="true" type="submit" value="Create" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

</body>
