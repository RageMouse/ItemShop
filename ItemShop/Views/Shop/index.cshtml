@using Logic.Models
@model ItemShop.Models.ShowAllItemsViewModel
@{
    ViewData["Title"] = "Items";
}

<h2>Shop</h2>

<hr />
<div class="mb-3">
    <input class="form-control" type="text" id="myInput" onkeyup="SearchBar()" placeholder="Search for items.." title="Type in a item name">
</div>
<table id="adminTable" class="table table-hover table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Name</th>
            <th>Bonus</th>
            <th>Description</th>
            <th>Type</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Item item in Model.Items)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Bonus</td>
                <td>@item.Description</td>
                <td>@item.Type</td>
                <td>
                    <a asp-action="Details" asp-controller="Item" asp-route-name="@item.Name">DETAILS</a> |
                    <a asp-action="Buy" asp-controller="Shop" asp-route-name="@item.Name">BUY</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<script src="/../wwwroot/js/site.js" language="javascript" type="text/javascript"></script>