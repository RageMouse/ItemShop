@using Logic.Models
@model ItemShop.Models.ShowAllAccountsViewModel
@{
    ViewData["Title"] = "Create account";
}

<h2>Accounts</h2>
<hr/>
<p>
    <a class="btn btn-danger" role="button" aria-pressed="true" asp-action="CreateNewAccount">CREATE NEW</a>
</p>
<div class="mb-3">
    <input class="form-control" type="text" id="myInput" onkeyup="SearchBar()" placeholder="Search for your account.." title="Type in a account name">
</div>
<table id="adminTable" class="table table-hover table-striped">
    <thead class="thead-dark">
    <tr>
        <th>Name</th>
        <th>Password</th>
        <th>Active</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (Account account in Model.Accounts)
    {
        <tr>
            <td>@account.Name</td>
            <td>@account.Password</td>
            <td>@account.Active</td>
            <td>
                <a asp-action="Details" asp-controller="Account" asp-route-id="@account.AccountId">DETAILS</a> |
                <a asp-action="Edit" asp-controller="Account" asp-route-id="@account.AccountId">EDIT</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<script src="/../wwwroot/js/site.js" language="javascript" type="text/javascript"></script>